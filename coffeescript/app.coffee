# create event handlers
click = (id, func) ->
	document.getElementById(id).addEventListener('click', func)


createTable = (e)->
	e.preventDefault()
	parser.buildHTML()

makeStep = (e) ->
	e.preventDefault()
	# simply let the tm make a step
	tm.step()

runTM = (e) ->
	e.preventDefault()
	# make all the moves, reuse makeStep
	tm.work()

